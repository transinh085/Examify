{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/identity-service/api/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "class-route": {
        "ClusterId": "class-cluster",
        "Match": {
          "Path": "/classes-service/api/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/catalogs-service/api/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "quiz-route": {
        "ClusterId": "quiz-cluster",
        "Match": {
          "Path": "/quizz-service/api/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http+https://identity-api/"
          }
        }
      },
      "class-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http+https://class-api/"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http+https://catalog-api/"
          }
        }
      },
      "quiz-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http+https://quiz-api/"
          }
        }
      }
    }
  }
}
